{
  "name": "red-site",
  "version": "0.0.1",
  "author": "Grayscale Digital",
  "license": "Private, all rights reserved",
  "private": true,
  "scripts": {
    "clean": "rm -f static/styles/main.*.css && rm -f static/js/main.*.js && rm -f static/js/vendor.*.js && rm -f data/*.json",
    "predev": "yarn run clean",
    "dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "prebuild": "yarn run clean",
    "build": "webpack --mode production",
    "fmt": "prettier --write \"src/**/*.js\"",
    "lint": "stylelint \"src/styles/**/*.css\"",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,scss,css}": [
      "yarn run fmt",
      "yarn run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "css-loader": "^0.28.11",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "mini-css-extract-plugin": "^0.3.0",
    "postcss-loader": "^2.1.3",
    "prettier": "^1.11.1",
    "stylelint": "^9.1.3",
    "stylelint-config-standard": "^18.2.0",
    "tailwindcss": "^0.5.1",
    "ts-loader": "^4.1.0",
    "typescript": "^2.8.1",
    "webpack": "^4.3.0",
    "webpack-cli": "^2.0.13"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "vue": "^2.5.16",
    "wretch": "^1.1.2"
  }
}
